<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Main.Theme" parent="AppTheme"/>

    <style name="AppTheme.Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <!--<item name="app:iconTint">@android:color/white</item>-->
    </style>

    <style name="Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/spacing</item>
        <item name="android:textSize">@dimen/text.large</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/spacing_x7</item>
    </style>
</resources>
